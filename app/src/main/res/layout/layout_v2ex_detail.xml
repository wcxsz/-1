<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <!--public String img;
    public String title;
    public String count;
    public String programmer;
    public String superzou;
    public String livid;
    public String time;-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:id="@+id/img_v2ex_detail"
                    android:layout_width="48dp"
                    android:layout_height="49dp"
                    android:src="@mipmap/ic_launcher"
                    />
                <LinearLayout
                    android:layout_toRightOf="@id/img_v2ex_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/superzou_v2ex_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sdfgh"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/programmer_v2ex_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="fghhtht"
                            android:layout_toLeftOf="@id/ic_comment"
                            android:background="@color/c_cecece"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            />

                        <ImageView
                            android:id="@+id/ic_comment"
                            android:layout_width="15dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/count_v2ex_detail"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/ic_comment" />
                        <TextView
                            android:id="@+id/count_v2ex_detail"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:text="fghhtht"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/time_v2ex_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sdfgh"
                        />
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/title_v2ex_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sdfgh"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
